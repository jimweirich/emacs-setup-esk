# -*- mode: ruby; require-final-newline: nil; backup-inhibited: t -*-
#name : def initialize(...)
# --
def initialize(${1:args})
  ${1:$
(mapconcat
 '(lambda (x) (let ((var (car (split-string x "[[:space:]]*=")))) (concat "@" var " = " var)))
 (split-string text ", ")
 (concat "\n" (make-string (current-column) 32)))
}$0
end